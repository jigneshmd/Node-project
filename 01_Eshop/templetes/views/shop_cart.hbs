    <script>
        function removecart(pid)
        {
           $.get("removefromcart",{pid},function(rt){
                location.reload()
           })
        }

        function changeQty(cid, value)
        {
            $.get("changeqty",{cid,value},function(rt){
                location.reload()
            })
        }
    </script>
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Offcanvas Menu Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="offcanvas__close">+</div>
        <ul class="offcanvas__widget">
            <li><span class="icon_search search-switch"></span></li>
            <li><a href="#"><span class="icon_heart_alt"></span>
                <div class="tip">2</div>
            </a></li>
            <li><a href="#"><span class="icon_bag_alt"></span>
                <div class="tip">2</div>
            </a></li>
        </ul>
        <div class="offcanvas__logo">
            <a href="/"><img src="img/logo.png" alt=""></a>
        </div>
        <div id="mobile-menu-wrap"></div>
        <div class="offcanvas__auth">
            <a href="#">Login</a>
            <a href="#">Register</a>
        </div>
    </div>
    <!-- Offcanvas Menu End -->

    <!-- Header Section Begin -->
   {{>userheader}}
    <!-- Header Section End -->

    <!-- Shop Cart Section Begin -->
    <section class="shop-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shop__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th>Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                 {{#each cartdata}}
                                <tr> 
                                     {{#each this.product}}
                                    <td class="cart__product__item">
                                        <img height="100" width="100" src="productimg/{{this.img}}" alt="">
                                        <div class="cart__product__item__title">
                                            <h6>{{this.pname}}</h6>
                                            <div class="rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                        </div>
                                    </td>
                                      {{/each}}
                                    <td class="cart__price">Rs.{{this.price}}</td>                                   
                                    <td>                                
                                         <h5 style="border-width:50px;">{{this.qty}}</h5>
                                    </td>
                                    <td class="cart__total" id="to">Rs.{{this.total}}</td>
                                    <td class="cart__close"><button onclick="removecart('{{this._id}}')"><span class="icon_close"></span></button></td>    
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="cart__btn">
                        <a href="/">Continue Shopping</a>
                    </div>
                </div>
                
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="discount__content">
                        <h6>Discount codes</h6>
                        <form action="#">
                            <input type="text" placeholder="Enter your coupon code">
                            <button type="submit" class="site-btn">Apply</button>
                        </form>
                    </div>
                </div>
                <div class="col-lg-4 offset-lg-2">
                    <div class="cart__total__procced">
                        <h6>Cart total</h6>
                        <ul>
                            {{!-- <li>Subtotal. RS<span>{{total}}</span></li> --}}
                            <li>Total Rs.</li>
                            <li id="amt"><span>{{total}}</span></li>
                        </ul>
                        <button class="btn btn-block btn-danger" id="rzp-button1">Proceed to checkout</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shop Cart Section End -->

